{
  "manifest_version": 3,
  "name": "Cytrus Chromium Extension",
  "version": "0.0.1",
  "description": "Serves promotions from the Cytrus network",
  "icons": {
    "128": "icons/icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Cytrus",
    "default_popup": "notif.html"
  },
  "permissions": [
    "notifications",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "run_at": "document_idle",
      "js": [
        "contentScript.js"
      ]
    }
  ]
}